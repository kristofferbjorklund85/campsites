<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new Campsite"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/EditTextLocationName"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:hint="Location" />

        <EditText
            android:id="@+id/EditTextType"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:hint="Type" />

        <EditText
            android:id="@+id/EditTextFee"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:hint="Fee" />

        <EditText
            android:id="@+id/EditTextCapacity"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:hint="Capacity" />

        <EditText
            android:id="@+id/EditTextAvailability"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:hint="Availability" />

        <EditText
            android:id="@+id/EditTextDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="5" />

        <Button
            android:id="@+id/ButtonCreateCampsite"
            android:layout_width="fill_parent"
            android:layout_height="87dp"
            android:text="Create Campsite" />

    </LinearLayout>
</ScrollView>
